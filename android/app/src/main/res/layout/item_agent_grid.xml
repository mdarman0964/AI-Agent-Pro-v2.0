<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardAgent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="16dp"
    app:cardElevation="4dp"
    android:layout_margin="8dp"
    android:clickable="true"
    android:focusable="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp"
        android:gravity="center">

        <TextView
            android:id="@+id/tvAgentIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸ“±"
            android:textSize="40sp"
            android:layout_marginBottom="12dp" />

        <TextView
            android:id="@+id/tvAgentName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Android"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:gravity="center"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/tvAgentDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Native apps"
            android:textSize="12sp"
            android:textColor="@color/white"
            android:alpha="0.8"
            android:gravity="center"
            android:maxLines="2"
            android:ellipsize="end"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/tvTemplateCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="15 templates"
            android:textSize="10sp"
            android:textColor="@color/white"
            android:alpha="0.7"
            android:background="@drawable/badge_background_dark"
            android:paddingHorizontal="8dp"
            android:paddingVertical="2dp" />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
